  "version": "0.2.0",
  "configurations": [ 
    {
      "name": "Docker Attach servers/node",
      "type": "node",
      "request": "attach",
      "port": 5858,
      "address": "localhost",
      "restart": true,
      "sourceMaps": false,
      "outFiles": [],
      "localRoot": "${workspaceRoot}/servers/node",
      "remoteRoot": "/usr/project"
    }, 
    {
      "name": "Docker Attach servers/node-main",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "sourceMaps": false,
      "outFiles": [],
      "localRoot": "${workspaceRoot}/servers/node-main",
      "remoteRoot": "/usr/project"
    },
    { 
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/app.js"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/start"
    }
  ]
}
